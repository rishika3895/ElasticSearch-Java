{
  "analysis": {
    "analyzer": {
      "english": {
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "english_stop",
          "english_stemmer"
        ]
      }
    },
    "filter": {
      "english_stop": {
        "type": "stop",
        "stopwords": "_english_"
      },
      "english_stemmer": {
        "type": "stemmer",
        "language": "english"
      }
    }
  }
}